<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:paddingTop="@dimen/size_small_24"
    android:paddingStart="@dimen/spacing_normal_16"
    android:paddingEnd="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/background_fon_header"
    >

    <ImageView
        android:id="@+id/image_view_header_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@color/color_accent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_normal_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Яков Вебер"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/user_email_text_view_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="askont3@mail.ru"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/font_text_normal"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>