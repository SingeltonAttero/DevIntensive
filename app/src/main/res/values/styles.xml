<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="image">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
        <item name="android:contentDescription">icons</item>

    </style>

    <style name="image.left">
        <item name="android:layout_gravity">center|left</item>
        <item name="android:gravity">center</item>
       <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="image.right">
        <item name="android:layout_gravity">center|right</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>


    </style>

    <style name="view_sep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size_2</item>
        <item name="android:background">@color/dark_text</item>
        <item name="android:layout_marginStart">@dimen/size_large_72</item>
    </style>

    <style name="linear_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16</item>
    </style>

    <style name="git_hub_linear_style">
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">@dimen/spacing_normal_16</item>
       <item name="android:textStyle">normal|italic</item>
    </style>

    <style name="sep_header_view">
        <item name="android:layout_width">@dimen/line_size_2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16</item>
    </style>

    <style name="header_text_view">
        <item name="android:textSize">@dimen/spacing_normal_16</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="header_text_view.bottom">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
